{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"#routes/*": ["./src/routes/*"],
			"#services/*": ["./src/services/*"],
			"#validations/*": ["./src/validations/*"],
			"#middlewares/*": ["./src/middlewares/*"],
			"#types/*": ["./src/types/*"]
		}
	},
}